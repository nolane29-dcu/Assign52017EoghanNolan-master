<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="eoghan.societygolf.AddGolfer"
    android:background="@color/abc_input_method_navigation_guard">


    <EditText
        android:layout_width="fill_parent"
        android:layout_height="36dp"
        android:id="@+id/editGolferName"
        android:hint="Name"
        android:textColor="@android:color/black"
        android:background="@android:color/white"
        android:backgroundTint="@android:color/white"
        android:layout_below="@+id/txtGolferName"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="36dp"
        android:id="@+id/editGolferHandicap"
        android:inputType="number"
        android:hint="Handicap"
        android:textColor="@android:color/black"
        android:background="@android:color/white"
        android:backgroundTint="@android:color/white"
        android:layout_below="@+id/txtGolferHandicap"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/spinner_gender"
        android:layout_height="36dp"
        android:layout_width="fill_parent"
        android:paddingRight="16dp"
        android:spinnerMode="dropdown"
        android:background="@android:color/white"
        android:layout_below="@+id/textView"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="36dp"
        android:id="@+id/editGolferPhone"
        android:hint="Phone number"
        android:inputType="number"
        android:textColor="@android:color/black"
        android:background="@android:color/white"
        android:backgroundTint="@android:color/white"
        android:layout_below="@+id/txtGolferPhone"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Please Enter Name"
        android:id="@+id/txtGolferName"
        android:textColor="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Please Enter Handicap"
        android:id="@+id/txtGolferHandicap"
        android:textColor="@android:color/white"
        android:layout_below="@+id/editGolferName"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Please Enter Phone Number"
        android:id="@+id/txtGolferPhone"
        android:textColor="@android:color/white"
        android:layout_below="@+id/editGolferHandicap"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Please Select Gender"
        android:id="@+id/textView"
        android:textColor="@android:color/white"
        android:layout_below="@+id/editGolferPhone"
        android:layout_alignParentStart="true" />

</RelativeLayout>
